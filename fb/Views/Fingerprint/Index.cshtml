@model IEnumerable<fb.Models.Entites.Fingerprint>

<div class="container p-3 ">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Fingerprint </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Fingerprint" asp-action="Create" class="btn btn-primary">
               <i class="fas fa-plus"></i> &nbsp; Create New Fingerprint
            </a>

        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped " style="width:100%">
            <thead>
                <tr>
                     <th>
                        Id
                    </th>
                    <th>
                        Name_Period
                    </th>
                    <th>
                        Time_Departure
                    </th>
                     <th>
                        Start_Time
                    </th>
                     <th>
                        Letting_Time
                    </th>
                     <th>
                        Closure_Time
                    </th>
                     <th>
                        Time_Required
                    </th>
                     <th>
                        Fingerprint_date
                    </th>
                     <th>
                        EmployeeId
                    </th>
                     <th>
                      FingerprintDevicesId
                    </th>
                    
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.Id </td>
                        <td width="20%">@obj.Period_Name </td>
                        <td width="20%">@obj.Time_Departure </td>
                        <td width="20%">@obj.Start_Time </td>
                        <td width="20%">@obj.Letting_Time </td>
                        <td width="20%">@obj.Closure_Time </td>
                        <td width="20%">@obj.Time_Required </td>
                        <td width="20%">@obj.Fingerprint_date </td>
                        <td width="20%">@obj.EmployeeId</td>
                        <td width="20%">@obj.FingerprintDevicesId </td>
                        
                       
                        <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Fingerprint" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>Edit
                            </a>
                            <a asp-controller="Fingerprint" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i> Delete 
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
     {
       <p> No Fingerprint Exists </p>
    }
    
</div>

